---
// src/pages/timeline.astro
import { getPosts } from '~/utils'
import LayoutDefault from '~/layouts/LayoutDefault.astro'
import SiteSeo from '~/components/SiteSeo.astro'

// 获取所有文章并筛选出标记为 timeline 的文章
const allPosts = await getPosts()
const timelinePosts = allPosts
  .filter(post => post.data.timeline) // 假设文章 frontmatter 包含 timeline: true
  .sort((a, b) => new Date(b.data.date) - new Date(a.data.date))

// 国际化翻译函数
const { translate: t } = Astro.locals
---

<LayoutDefault>
  <SiteSeo 
    slot="seo" 
    title={t('timeline_title')} 
    desc={t('timeline_description')} 
  />

  <main class="timeline-container">
    <h1 class="timeline-title">{t('timeline_heading')}</h1>
    
    <div class="timeline">
      {timelinePosts.map((post, index) => (
        <article class={`timeline-item ${index % 2 === 0 ? 'left' : 'right'}`}>
          <div class="timeline-marker"></div>
          
          <div class="timeline-content">
            <time class="timeline-date">{post.data.date}</time>
            <h2 class="timeline-post-title">
              <a href={`/posts/${post.slug}`}>{post.data.title}</a>
            </h2>
            {post.data.description && (
              <p class="timeline-excerpt">{post.data.description}</p>
            )}
            {post.data.icon && (
              <div class="timeline-icon">
                <span class={`i-mdi-${post.data.icon}`}></span>
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </main>
</LayoutDefault>

<style>
  .timeline-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .timeline-title {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
  }

  .timeline {
    position: relative;
    padding: 2rem 0;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    width: 2px;
    height: 100%;
    background: var(--color-border);
  }

  .timeline-item {
    display: flex;
    margin-bottom: 2rem;
    position: relative;
    width: 100%;
  }

  .timeline-marker {
    width: 20px;
    height: 20px;
    background: var(--color-primary);
    border-radius: 50%;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .timeline-content {
    width: calc(50% - 40px);
    padding: 1.5rem;
    background: var(--color-bg-secondary);
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .timeline-item.left .timeline-content {
    margin-right: 40px;
  }

  .timeline-item.right .timeline-content {
    margin-left: 40px;
  }

  .timeline-date {
    display: block;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .timeline-post-title {
    margin: 0 0 1rem;
    font-size: 1.25rem;
  }

  .timeline-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .timeline-icon {
    margin-top: 1rem;
    font-size: 1.5rem;
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .timeline::before {
      left: 20px;
    }

    .timeline-item {
      flex-direction: column;
      align-items: flex-start;
    }

    .timeline-content {
      width: calc(100% - 60px);
      margin-left: 60px !important;
    }

    .timeline-marker {
      left: 20px;
    }
  }
</style>